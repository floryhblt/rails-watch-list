<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.cinemonde.fr/medias-pages/cine-cluses/salle_1-20200626-131738.jpg);">
    <h1>Find the right movie to watch.</h1>
</div>

<div class="container my-5">
  <div class="navbar">
    <h2>My lists</h2>
    <%= link_to "Create a new list", new_list_path, :class => "btn btn-success text-white"%>
  </div>
  <div class="row d-flex justify-content-center">
    <% @lists.each do |list| %>
      <div class="col-6 col-sm-3 my-3">
          <%= link_to list_path(list) do %>
          <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.sortiraparis.com/images/80/69688/676726-top-des-meilleures-salles-de-cinema-de-paris.jpg);">
            <div class="d-flex justify-content-center align-items-center h-100 text-white">
              <h5><%= list.name %></h5>
            </div>
          </div>
          <% end %>
      </div>
    <% end %>
  </div>
  <br>
</div>


