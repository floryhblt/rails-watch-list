<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.sortiraparis.com/images/80/69688/676726-top-des-meilleures-salles-de-cinema-de-paris.jpg);">
    <h1>Find THE movie to watch !</h1>
</div>

<div class="container my-5">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-sm-3">
          <%= link_to list_path(list) do %>
          <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.sortiraparis.com/images/80/69688/676726-top-des-meilleures-salles-de-cinema-de-paris.jpg);">
          <h5 class="card-title"><%= list.name %></h5>
          </div>
          <% end %>
      </div>
    <% end %>
  </div>
  <br>
  <%= link_to "Create a new list", new_list_path, :class => "btn btn-success"%>
</div>


