<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>');">
    <h1><%= @list.name %></h1>
</div>

<div class="container my-5">
<%= link_to "Add a movie", new_list_bookmark_path(@list), :class => "btn btn-success text-white" %>
<%= link_to "Back to lists", lists_path, :class => "btn btn-danger text-white"%>
<div class="row d-flex justify-content-center">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-12 col-sm-6 my-3">
      <div class="card">
        <div class="card-image" style="background-image: url(<%= bookmark.movie.poster_url%>);">
        </div>
        <div class="card-first-line d-flex justify-content-between" >
          <h5 class="card-title"><strong><%= bookmark.movie.title %></strong></h5>
          <div class="d-flex justify-content-between">
            <i class="fa-regular fa-star"></i>
            <p class="card-rating">  
            <%= bookmark.movie.rating %></p>
          </div>
        </div>
        <p class="card-overview"><%= bookmark.movie.overview %></p>
        <%= link_to "Remove from list", 
        bookmark_path(bookmark),
        method: :delete,
        data: { confirm: "Are you sure ?"}, 
        :class => "btn btn-outline-primary btn-sm"%>
      </div>
    </div>
  <% end %>
</div>
</div>

