<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.sortiraparis.com/images/80/69688/676726-top-des-meilleures-salles-de-cinema-de-paris.jpg);">
    <h1>List <%= @list.name %></h1>
</div>

<div class="container my-5">
<%= link_to "Add a movie", new_list_bookmark_path(@list), :class => "btn btn-success" %>
<%= link_to "Back to lists", lists_path, :class => "btn btn-primary"%>

  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-sm-3">
        <div class="card">
          <div class="card-image" style="background-image: url(<%= bookmark.movie.poster_url%>);">
          </div>
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-title"><%= bookmark.movie.overview %></p>
          <p class="card-title"><%= bookmark.movie.rating %></p>
          <%= link_to "Remove from list", 
          bookmark_path(bookmark),
          method: :delete,
          data: { confirm: "Are you sure ?"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>

