<div class="container">
  <div class="navbar mx-10">
    <h2 class="pt-3">Add a movie to the list : <%= @list.name %></h2>
    <%= link_to "Back to lists", lists_path, :class => "btn btn-danger text-white"%>
  </div>
  <div class="row ">
    <div class="col-4 my-3">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, :label => "Choose a movie" %>
        <%= f.input :comment %>
        <%= f.submit "Create bookmark", class: "btn btn-success text-white mt-3" %>
      <% end %>
    </div>
  </div>
</div>
